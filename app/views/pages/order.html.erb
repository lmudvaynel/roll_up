<% @page = Page.find_by_slug("order") %>

<% provide(:title, @page.name) %>

<div class="wrapper">
  <%= raw @page.content %>
</div>

<% order = @order || Order.new %>
<div>
<%= form_for(order) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
  <div class="field">
  	<%= f.text_field :name, placeholder: "Ваше имя", class: "input_order" %>
  	<%= f.text_field :company, placeholder: "Компания", class: "input_order"  %>
  	<%= f.text_field :phone, placeholder: "Телефон", class: "input_order"  %>
  	<%= f.text_field :email, placeholder: "E-mail", class: "input_order"  %>
    <%= f.text_area :content, placeholder: "Описание заказа..." %>
 	</div>  
  
  <%= f.submit "Заказать", class: "more" %>
<% end %>
</div>